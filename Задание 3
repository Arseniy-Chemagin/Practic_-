using System;

namespace RobotApp
{
    public class Robot
    {
        public string Name { get; set; }
        private int energy;

        public int Energy
        {
            get { return energy; }
            set
            {
                if (value < 0) energy = 0;
                else if (value > 100) energy = 100;
                else energy = value;
            }
        }

        public Robot(string name, int initialEnergy)
        {
            Name = name;
            Energy = initialEnergy;
        }

        public void Work()
        {
            Energy -= 20; 
            Console.WriteLine($"Робот {Name} поработал. Текущая энергия: {Energy}");
        }

        public void Charge()
        {
            Energy += 50; 
            Console.WriteLine($"Робот {Name} зарядился. Текущая энергия: {Energy}");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Robot myRobot = new Robot("R2-D2", 100);

            Console.WriteLine($"Начальное состояние: {myRobot.Name}, Энергия: {myRobot.Energy}\n");

            myRobot.Work();
            myRobot.Work();

            myRobot.Charge();

            myRobot.Work();

            Console.ReadKey();
        }
    }
}
