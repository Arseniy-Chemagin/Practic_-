using System;

namespace Assignment
{
    public class ProgramConfig
    {
        public const string Version = "2.1.0";
        public const string Developer = "Алексей Петров";

        public static void DisplayProgramInfo()
        {
            Console.WriteLine("--- Конфигурация программы ---");
            Console.WriteLine($"Версия программы: {Version}");
            Console.WriteLine($"Разработчик: {Developer}");
            Console.WriteLine("------------------------------");
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            ProgramConfig.DisplayProgramInfo();

             Console.WriteLine(ProgramConfig.Version);

            Console.ReadKey();
        }
    }
}
